<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_in"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        tools:context="com.pbluedotsoft.atapp.TestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingEnd="26dp"
            android:paddingStart="26dp">

            <TextView
                android:id="@+id/tv_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/gat_q1"
                android:textAppearance="@style/TextCustomNormal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <EditText
                    android:id="@+id/et_value_q1"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    style="@style/TextCustomNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="sek x 1.8 =" />

                <TextView
                    android:id="@+id/tv_result_q1"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ems="4"
                    android:maxLength="5"
                    tools:text="102.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/gat_q2"
                android:textAppearance="@style/TextCustomNormal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <EditText
                    android:id="@+id/et_value_q2"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    style="@style/TextCustomNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="sek x 1.8 =" />

                <TextView
                    android:id="@+id/tv_result_q2"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ems="4"
                    android:maxLength="5"
                    tools:text="102.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/gat_q3"
                android:textAppearance="@style/TextCustomNormal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <EditText
                    android:id="@+id/et_value_q3"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    style="@style/TextCustomNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="sek x 1.8 =" />

                <TextView
                    android:id="@+id/tv_result_q3"
                    style="@style/gat_et_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ems="4"
                    android:maxLength="5"
                    tools:text="102.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Summa"
                    android:textAppearance="@style/TextCustomLarge" />

                <TextView
                    android:id="@+id/tv_total_sum"
                    style="@style/total_sum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:minEms="3" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_spara"
                android:text="@string/done_button"
                android:textAppearance="@style/TextCustomNormal"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>
</layout>


