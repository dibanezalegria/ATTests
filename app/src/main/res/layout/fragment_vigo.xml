<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_in"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        tools:context="com.pbluedotsoft.atapp.TestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="30dp"
            android:paddingStart="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp">

                <TextView
                    style="@style/TextCustomNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="Patient" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background_value_output"
                    android:paddingEnd="6dp">

                    <Spinner
                        android:id="@+id/spin_patient_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/border_only_blue_grey_100"
                android:orientation="vertical"
                android:padding="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_grey_400"
                    android:gravity="center_horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:text="Höger"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:text="Vänster"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="Normal"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="Handstyrka" />

                    <EditText
                        android:id="@+id/et_value_1h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_1v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_1"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="Fingerstyrka" />

                    <TextView
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2" />

                    <TextView
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2" />

                    <TextView
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:paddingStart="32dp"
                        android:text="dig II" />

                    <EditText
                        android:id="@+id/et_value_2h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_2v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_2"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:paddingStart="32dp"
                        android:text="dig III" />

                    <EditText
                        android:id="@+id/et_value_3h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_3v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_3"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:paddingStart="32dp"
                        android:text="dig IV" />

                    <EditText
                        android:id="@+id/et_value_4h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_4v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_4"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:paddingStart="32dp"
                        android:text="dig V" />

                    <EditText
                        android:id="@+id/et_value_5h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_5v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_5"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextCustomNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="Tumstyrka" />

                    <EditText
                        android:id="@+id/et_value_6h"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <EditText
                        android:id="@+id/et_value_6v"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="3"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="4" />

                    <TextView
                        android:id="@+id/tv_normal_6"
                        style="@style/jamar_et_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:ems="5"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_spara"
                android:text="@string/done_button"
                android:textAppearance="@style/TextCustomNormal"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</layout>
