<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/blue_grey_900">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="64dp"
        tools:context="com.pbluedotsoft.atapp.LoginActivity">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/tv_info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info message"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_100"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:hint="Username"
            android:inputType="textFilter"
            android:digits="@string/valid_characters"
            android:maxLines="1"
            android:maxLength="12"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_info_message"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_100"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:digits="@string/valid_characters"
            android:maxLength="12"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:textSize="24sp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/et_username"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btn_login_or_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_spara"
            android:textColor="@android:color/white"
            android:text="Log in"
            android:textSize="22sp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.515" />

        <TextView
            android:id="@+id/tv_register_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account yet? Register"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_or_register"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/copyright"
            android:textColor="@color/blue_grey_400"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_register_message" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
